@model IranTimes.AddUserToRoleViewModel

@{ 
  
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (!Model.UserRoleNames.Any())
    {
        <h4>مقامی یافت نشد</h4>
    }
    else
    {
<form asp-action="AddUserToRole" method="post">
    <div asp-validation-summary="ModelOnly" />
    @for (int i=0; i<Model.UserRoleNames.Count;i++)
    {
        <div class="form-group">
            <input asp-for="@Model.UserRoleNames[i].IsSelected" />
            <label>@Model.UserRoleNames[i].RoleName</label>

        </div>
        <input type="hidden" asp-for="@Model.UserRoleNames[i].RoleName" />

    }
    <input type="hidden" asp-route-id="@Model.Id" />
    <button type="submit" class="btn btn-primary">ذخیره</button>
</form>
    }
}
