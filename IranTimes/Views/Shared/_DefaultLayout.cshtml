@using IranTimes.Models;
@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@inject UserManager<ApplicationUser> _userManager;
@inject SignInManager<ApplicationUser> _signInManager;

<!DOCTYPE HTML>
<html>
<head>
    <title>خبرگزاری ایران تایمز</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Style Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="applijewelleryion/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href='//fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href="~/css/style.css" rel='stylesheet' type='text/css' />
    <script src="~/js/jquery-1.11.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <!-- animation-effect -->
    <link href="~/css/animate.min.css" rel="stylesheet">
    <script src="~/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <!-- //animation-effect -->
</head>
<body>
    <div class="header" id="ban">
        <div class="container">

            <div class="header_left wow fadeInRight animated animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInRight;">
                <nav class="navbar navbar-default">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse nav-wil" id="bs-example-navbar-collapse-1">
                        <nav class="link-effect-7" id="link-effect-7">
                            <ul class="nav navbar-nav">
                                <li class="active act"><a asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
                                <li><a asp-controller="Home" asp-action="AboutUs">درباره ما</a></li>
                                <li><a asp-controller="Home" asp-action="ContactUs">تماس با ما</a></li>
                            </ul>
                        </nav>
                    </div>
                    <!-- /.navbar-collapse -->
                </nav>
            </div>
            @{ 
                var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                var user = await _userManager.FindByIdAsync(userId);
            }
            @if (user != null)
            {
          
            {
                <div style="display:flex;margin-right:20px;margin-top:10px;justify-content:left"> <p>  @User.Identity.Name  عزیز خوش آمدید / @if ((user.IsPayed == true)) {<a asp-area = "Admin" asp-controller = "Home" asp-action = "Index" > پنل ادمین </a>} / <a asp-controller="Account" asp-action="LogOut">خروج</a></p></div>

                }
            }
            else
            {

                <div style="display:flex;margin-right:30px;margin-top:10px;justify-content:left"><a asp-controller="Account" asp-action="Login">ورود</a>/<a asp-controller="Account" asp-action="Register">ثبت نام</a></div>

            }
            <div class="clearfix"> </div>
        </div>

    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="logo wow fadeInDown animated" data-wow-duration=".8s" data-wow-delay=".2s" style="visibility: visible; animation-duration: 0.8s; animation-delay: 0.2s; animation-name: fadeInDown;">
                <h1><a asp-action="Index">Iran Times</a></h1>
                <p>
                    <label class="of"></label>
                    ایران تایمز یک خبرگزاری متفاوت<label class="on"></label>
                </p>
            </div>
        </div>
    </div>
    <div class="banner">
        <div class="container">
            <h2>ایران تایمز یک خبرگزاری بین المللی است </h2>
            <p>
                شماهم میتوانید در ایران تایمز خبرنگار باشید و گزارش های خود را از سراسر دنیا منتشر کنید فقط کافیست قوانین را
                مطالعه کرده و درصورت نداشتن مشکل ثبت نام کنید
            </p>
            <a asp-controller="Home" asp-action="Ruls">مطالعه قوانین و ثبت نام</a>
        </div>
    </div>
    <div class="technology">
        <div class="container">
            <div class="col-md-9 technology-right">
                <div class="tech-no">
                    @RenderBody()
                </div>
            </div>
            <!-- technology-left -->
            <div class="col-md-3 technology-left">
                <div class="blo-top1">

                    <div class="tech-btm">
                        <div class="search-1 wow fadeInDown animated" data-wow-duration=".8s" data-wow-delay=".2s" style="visibility: visible; animation-duration: 0.8s; animation-delay: 0.2s; animation-name: fadeInDown;">
                            <form asp-controller="Search" asp-action="Index" method="post">
                                <input type="search" name="q" value="جستجو..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}" required="">
                                <input type="submit" value=" ">
                            </form>
                        </div>
                        <h4>
                            پست های محبوب
                        </h4>

                        @await Component.InvokeAsync("Popular")

                        <div class="insta wow fadeInDown animated" data-wow-duration=".8s" data-wow-delay=".2s" style="visibility: visible; animation-duration: 0.8s; animation-delay: 0.2s; animation-name: fadeInDown;">
                            <h4>اینستاگرام</h4>
                            <ul>

                                <li><a href="singlepage.html"><img src="~/images/t1.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/m1.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/f1.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/m2.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/f2.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/t2.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/f3.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/t3.jpg" class="img-responsive" alt=""></a></li>
                                <li><a href="singlepage.html"><img src="~/images/m3.jpg" class="img-responsive" alt=""></a></li>
                            </ul>
                        </div>

                        <p>ما را در اینستاگرام و توییتر دنبال کنید تا از جدید ترین اخبار مطلع شوید </p>
                        <div class="mediaicon">
                            <a href="http://twitter.com" class="fa fa-twitter" style="width:20px;"></a>
                            <a href="http://instagram.com" class="fa fa-instagram" style="width: 20px; margin: auto"></a>
                            <div class="twt">
                            </div>
                          
                            <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <!-- technology-left -->
        </div>
    </div>

    <div class="footer">
        <div class="container">
            <div class="col-md-4 footer-right wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                <h4>درباره من</h4>
                <p>خبرگزاری ایران تایمز که در حال حاضر سرپرستی و مدیریت روزنامه ایران تایمز را بر عهده دارد یک خبرگزاری بین المللی است که هواره مقیاس آن در حال گسترش است از این رو ...</p>
                <img src="images/t4.jpg" class="img-responsive" alt="">
                <div class="bht1">
                    <a asp-action="AboutUs">ادامه مطلب</a>
                </div>
            </div>
            <div class="col-md-4 footer-middle wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                <h4>
                    آخرین توییت
                </h4>
                <div class="mid-btm">
                    <p> تیم ملی فوتبال ایران با نتیجه 1 بر 0 در مقابل امارات پیروز میدان شد .</p>
                </div>

                <p> هفته گذشته وزیر امورخارجه کشورمان با سید حسن نصر الله دیدار کرد .</p>

            </div>
            <div class="col-md-4 footer-left wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                <h4>
                    عضویت در خبرنامه
                </h4>
                <p>با عضویت در خبرنامه میتوانید از جدیدترین اخبار روز دنیا مطلع شوید </p>
                <div class="name">
                    <form asp-controller="Home" asp-action="NewsLetter" method="post">
                        <input type="text" placeholder="نام و نام خانوادگی" required="">
                        <input type="email" placeholder="ایمیل" required="" style="width:100%;padding:.5em" >                      
                        <input type="submit" value="همین الان عضو خبرنامه شوید" >
                    </form>

                </div>

                <div class="clearfix"> </div>

            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <script src="~/js/modal.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
